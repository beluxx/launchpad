<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:meta="http://namespaces.zope.org/meta">

<meta:directives namespace="http://namespaces.zope.org/browser">

    <meta:directive
        name="page"
        schema="lp.services.webapp.metazcml.IPageDirective"
        handler="lp.services.webapp.metazcml.page"
        />

    <meta:complexDirective
        name="pages"
        schema="lp.services.webapp.metazcml.IPagesDirective"
        handler="lp.services.webapp.metazcml.pages"
        >
      <meta:subdirective
          name="page"
          schema="lp.services.webapp.metazcml.IPagesPageSubdirective"
          />
    </meta:complexDirective>

    <meta:complexDirective
        name="editform"
        schema="lp.services.webapp.metazcml.IEditFormDirective"
        handler="lp.services.webapp.metazcml.EditFormDirective"
        >
      <meta:subdirective
          name="widget"
          schema="zope.app.form.browser.metadirectives.IWidgetSubdirective"
          />
    </meta:complexDirective>

    <meta:complexDirective
        name="addform"
        schema="lp.services.webapp.metazcml.IAddFormDirective"
        handler="lp.services.webapp.metazcml.AddFormDirective"
        >
      <meta:subdirective
          name="widget"
          schema="zope.app.form.browser.metadirectives.IWidgetSubdirective"
          />
    </meta:complexDirective>

    <meta:complexDirective
        name="schemadisplay"
        schema="lp.services.webapp.metazcml.ISchemaDisplayDirective"
        handler="lp.services.webapp.metazcml.SchemaDisplayDirective"
        />
</meta:directives>

<meta:directive
    namespace="http://namespaces.zope.org/zope"
    name="permission"
    schema="lp.services.webapp.metazcml.IDefineLaunchpadPermissionDirective"
    handler="lp.services.webapp.metazcml.definePermission" />

</configure>
