<VirtualHost 127.0.0.88:80>
  ServerName archive.launchpad.dev
  LogLevel debug

  DocumentRoot /var/tmp/archive
  <Directory /var/tmp/archive/>
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.0/255.0.0.0
